CURL=/usr/bin/curl
CONVERT=/usr/bin/convert
URL=http://www.cse.nd.edu/~ccl/images/capitol.jpg

capitol.diff: capitol.0.jpg capitol.270.jpg
	! diff --brief capitol.0.jpg capitol.270.jpg > capitol.diff;

capitol.90.jpg->capitol.out.jpg: capitol.jpg
	$CONVERT -rotate 90 capitol.jpg capitol.out.jpg

capitol.180.jpg->capitol.out.jpg: capitol.jpg
	$CONVERT -rotate 180 capitol.jpg capitol.out.jpg

capitol.270.jpg->capitol.out.jpg: capitol.90.jpg->capitol.in.jpg
	$CONVERT -rotate 180 capitol.in.jpg capitol.out.jpg

capitol.0.jpg->capitol.out.jpg: capitol.180.jpg->capitol.in.jpg
	$CONVERT -rotate 180 capitol.in.jpg capitol.out.jpg

capitol.jpg:
	$CURL -o capitol.jpg $URL

